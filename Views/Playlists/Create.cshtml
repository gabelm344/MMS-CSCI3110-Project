@model CSCI3110_TermProject.Models.Playlist
@{
    ViewData["Title"] = "Create Playlist";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>New Playlist</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Playlist Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">Back to Home</a>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
